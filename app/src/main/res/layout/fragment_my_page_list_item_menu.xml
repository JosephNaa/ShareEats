<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_my_page_menu_list_item_tvName"
        android:layout_width="0dp"
        android:layout_height="80dp"
        tools:text="설정"
        android:textSize="24sp"
        android:paddingLeft="32dp"
        android:gravity="left|center"
        app:layout_constraintRight_toLeftOf="@id/fragment_my_page_menu_list_item_ivArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/fragment_my_page_menu_list_item_ivArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/fragment_my_page_menu_list_item_tvName"
        app:layout_constraintLeft_toRightOf="@id/fragment_my_page_menu_list_item_tvName"
        app:layout_constraintBottom_toBottomOf="@id/fragment_my_page_menu_list_item_tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_recyclerview_menu_arrow" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.3dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>