<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/activity_find_store_iv_profile"
        android:layout_width="97dp"
        android:layout_height="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/activity_find_store_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="장수촌칼국수"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/activity_find_store_iv_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_find_store_tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="010-0000-0000"
        app:layout_constraintStart_toEndOf="@+id/activity_find_store_iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/activity_find_store_tv_name" />

    <TextView
        android:id="@+id/activity_find_store_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="경북 구미시 00동 000-00"
        app:layout_constraintStart_toEndOf="@+id/activity_find_store_iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/activity_find_store_tv_tel" />

    <TextView
        android:id="@+id/activity_find_store_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="매일 11:00 ~ 22:00"
        app:layout_constraintStart_toEndOf="@+id/activity_find_store_iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/activity_find_store_tv_location" />
</androidx.constraintlayout.widget.ConstraintLayout>