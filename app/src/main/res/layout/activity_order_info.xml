<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.mypage.orderinfo.OrderInfoActivity">

    <ImageView
        android:id="@+id/fragment_my_page_notice_ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/fragment_my_page_order_info_tvAppBar"
        style="@style/appbar_text"
        android:text="주문 내역"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_notice_ivArrow"
        app:layout_constraintStart_toEndOf="@+id/fragment_my_page_notice_ivArrow"
        app:layout_constraintTop_toTopOf="@+id/fragment_my_page_notice_ivArrow" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_margin="@dimen/activity_margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_notice_ivArrow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_my_page_notice_tvTitle"
                style="@style/header_text"
                android:text="지금 맘스터치 드실 분!"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_tvDate"
                style="@style/body_text"
                android:text="2021.10.30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_notice_tvTitle" />

            <View
                android:id="@+id/fragment_my_page_order_info_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/activity_margin_16dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/fragment_my_page_order_info_tvDate"/>

            <TextView
                android:id="@+id/fragment_my_page_order_info_tv1"
                style="@style/header_text"
                android:layout_marginLeft="@dimen/activity_margin_16dp"
                android:layout_marginTop="@dimen/activity_margin_16dp"
                android:text="음식점"
                app:layout_constraintTop_toBottomOf="@id/fragment_my_page_order_info_line1"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/fragment_my_page_order_info_tv2"
                style="@style/header_text"
                android:layout_marginTop="16dp"
                android:text="배달장소"
                app:layout_constraintStart_toStartOf="@+id/fragment_my_page_order_info_tv1"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_order_info_tv1" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_tv3"
                style="@style/header_text"
                android:layout_marginTop="16dp"
                android:text="마감시간"
                app:layout_constraintStart_toStartOf="@+id/fragment_my_page_order_info_tv2"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_order_info_tv2" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_store_name"
                style="@style/body_text"
                android:layout_marginLeft="48dp"
                android:text="맘스터치 진평점"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_order_info_tv1"
                app:layout_constraintStart_toEndOf="@+id/fragment_my_page_order_info_tv2"
                app:layout_constraintTop_toTopOf="@+id/fragment_my_page_order_info_tv1" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_store_location"
                style="@style/body_text"
                android:layout_marginLeft="48dp"
                android:text="분수대 앞"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_order_info_tv2"
                app:layout_constraintStart_toEndOf="@+id/fragment_my_page_order_info_tv2"
                app:layout_constraintTop_toTopOf="@+id/fragment_my_page_order_info_tv2" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_date"
                style="@style/body_text"
                android:layout_marginLeft="48dp"
                android:text="2021.10.30 21:00"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_order_info_tv3"
                app:layout_constraintStart_toEndOf="@+id/fragment_my_page_order_info_tv3"
                app:layout_constraintTop_toTopOf="@+id/fragment_my_page_order_info_tv3" />

            <View
                android:id="@+id/fragment_my_page_order_info_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_margin_16dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/fragment_my_page_order_info_date" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_name"
                style="@style/body_text"
                android:layout_marginHorizontal="@dimen/activity_margin_16dp"
                android:layout_marginTop="@dimen/activity_margin_16dp"
                android:text="맘스터치 선착 2명 ㄱㄱ"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_order_info_line2" />

            <View
                android:id="@+id/fragment_my_page_order_info_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/activity_margin_16dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/fragment_my_page_order_info_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_my_page_order_info_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_order_info_line3">
            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:id="@+id/fragment_my_page_order_info_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_order_info_rv"/>

            <TextView
                android:id="@+id/fragment_my_page_order_info_tv4"
                style="@style/body_text"
                android:layout_marginTop="@dimen/activity_margin_16dp"
                android:layout_marginLeft="@dimen/activity_margin_16dp"
                android:text="총 주문금액 / 최소 주문금액"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_my_page_order_info_line4" />

            <TextView
                android:id="@+id/fragment_my_page_order_info_total_price"
                style="@style/body_text"
                android:text="25,000원 / 14,900원"
                android:layout_marginRight="@dimen/activity_margin_16dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_order_info_tv4"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>