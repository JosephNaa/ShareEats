<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/fragment_my_page_order_info_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/fragment_my_page_order_info_name"
        style="@style/body_text"
        android:layout_margin="@dimen/activity_margin_16dp"
        android:text="Joshua"
        app:layout_constraintStart_toEndOf="@+id/fragment_my_page_order_info_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_my_page_order_info_orders"
        style="@style/body_text"
        android:text="싸이버거 세트 1개"
        android:layout_margin="@dimen/activity_margin_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_order_info_profile"
        app:layout_constraintStart_toEndOf="@+id/fragment_my_page_order_info_profile" />

    <TextView
        android:id="@+id/fragment_my_page_order_info_price"
        style="@style/body_text"
        android:text="총 13,000개"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_order_info_orders"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>