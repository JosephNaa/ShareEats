<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/activity_select_menu_ll_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/activity_select_menu_iv_photo"
            android:layout_width="97dp"
            android:layout_height="97dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/activity_select_menu_ll_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:padding="@dimen/activity_margin_8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_select_menu_tv_name"
                style="@style/header_text"
                android:text="싸이버거" />

            <TextView
                android:id="@+id/activity_select_menu_tv_price"
                style="@style/body_text"
                android:text="5,000원" />

            <TextView
                android:id="@+id/activity_select_menu_tv_desc"
                style="@style/body_text"
                android:text="통닭다리살로 만든패티로 정성껏 만든 햄버거입니다." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_select_menu_ll_quantity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_select_menu_iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/outline_remove_circle_black_24dp"
                app:tint="@color/appTheme" />

            <TextView
                android:id="@+id/activity_select_menu_tv_quantity"
                style="@style/header_text"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/activity_select_menu_iv_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/outline_add_circle_black_24dp"
                app:tint="@color/appTheme" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>