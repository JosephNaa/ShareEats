<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin_16dp">

    <ImageView
        android:id="@+id/iv_chat_list_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_chat_list_nickname"
        style="@style/header_text"
        android:layout_marginLeft="@dimen/activity_margin_16dp"
        android:text="홍길동"
        app:layout_constraintStart_toEndOf="@+id/iv_chat_list_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chat_list_content"
        style="@style/body_text"
        android:text="안녕하세요."
        app:layout_constraintBottom_toBottomOf="@+id/iv_chat_list_profile"
        app:layout_constraintStart_toStartOf="@+id/tv_chat_list_nickname" />

    <TextView
        android:id="@+id/tv_chat_list_date"
        style="@style/body_text"
        android:text="2021.11.01"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_list_content"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>