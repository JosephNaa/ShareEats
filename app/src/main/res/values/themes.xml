<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- 기본 액션바 사용하지 않도록 설정 -->
    <style name="Theme.ShareEats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- appbar에 사용(가장 큰 텍스트) | 페이지를 대표하는 텍스트 | 최상단 말머리 -->
    <style name="appbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/appbar_text_size_18sp</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 헤더에 사용 | 특정 영역의 주제가 되는 텍스트 -->
    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_text_size_16sp</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 일반 텍스트 | 내용 -->
    <style name="body_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/body_text_size_14sp</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 작은 텍스트(검은색) -->
    <style name="explain_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/explain_text_size_10sp</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 작은 텍스트(회색) | 중요하지 않은 텍스트 | 설명 텍스트 -->
    <style name="explain_text_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/explain_text_size_10sp</item>
        <item name="android:textColor">@color/black_low_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>