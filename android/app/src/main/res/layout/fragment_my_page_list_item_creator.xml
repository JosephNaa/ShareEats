<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_my_page_creator_list_item_tvName"
        android:layout_width="0dp"
        android:layout_height="@dimen/appbar_margin_54dp"
        tools:text="김주환"
        style="@style/header_text"
        android:paddingLeft="32dp"
        android:gravity="left|center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/fragment_my_page_creator_list_item_tvEmail"
        style="@style/body_text"
        tools:text="juhwan.dev@gmail.com"
        android:paddingLeft="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_my_page_creator_list_item_tvName"
        app:layout_constraintStart_toEndOf="@+id/fragment_my_page_creator_list_item_tvName"
        app:layout_constraintTop_toTopOf="@+id/fragment_my_page_creator_list_item_tvName" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.3dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>